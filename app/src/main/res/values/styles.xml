    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/color_main_text</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:editTextColor">@color/red_color</item>
        <item name="android:editTextBackground">@color/color_tranparent</item>
        <item name="android:itemBackground">@color/red_color</item>
        <item name="colorPrimaryDark">@color/red_color</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorHint">@color/tint_gray_line</item>
        <item name="android:textColor">@color/color_text_secondry</item>
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlActivated">@color/color_tranparent</item>
        <item name="colorControlHighlight">@color/color_tranparent</item>
    </style>



    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppThemeBtn" parent="@android:style/Widget.PopupMenu">
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:minWidth">20dip</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="overscroll_remove" parent="android:Widget.ScrollView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>


</resources>

